$TTL 300
@       IN      SOA     localhost. root.localhost. (
        2024011001     ; Serial (YYYYMMDDNN)
        3600           ; Refresh
        1800           ; Retry
        604800         ; Expire
        86400 )        ; Minimum TTL

@       IN      NS      localhost.

